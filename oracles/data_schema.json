{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Data",
    "type": "object",
    "description": "Data from a Mycellium-compatible device",
    "properties": {
        "deviceId": {
            "description": "ID of the device that produced this data",
            "type": "string"
        },
        "sensorData": {
            "description": "Measurements taken by the device sensors",
            "type": "array",
            "output": {
                "type": "object",
                "properties": {
                    "unit": {
                        "type": "string"
                    },
                     "value": {
                         "type": "number"
                     }
                }
            },
            "required": [ "unit", "value" ]
        }
    },
    "required": [ "deviceId" ]
}